extends layout

block content
    div(class=`card ${cardClass}`)
        h3.title ACME Insurance Co
        div.info-row.name-row
            p.label Name:
            p #{firstName} #{lastName}
        div.info-container
            div.info-row
                p.label Insurance Type
                p #{type}
            div.info-row
                //getMonth()   Get month as a number (0-11)
                //get the day as a number (1-31)
                //getFullYear()   get the year as a four digit number (yyyy)
                p.label DOB:
                p #{dateOfBirth.getMonth()+1}/#{dateOfBirth.getDate()}/#{dateOfBirth.getFullYear()}
        div.info-row
            div
                p.label Address

            div.address-text
                p #{addressLine1}
                p #{addressLine2}
                p #{city}, #{state}, #{zip}
        div.info-container
            div.info-row
                p.label Acct #:
                p #{accountNumber}
            div.info-row
                p.label Exp.:
                //add 4 years to today's date to get exp date
                p #{currentDate.getMonth()+1}/#{currentDate.getDate()}/#{currentDate.getFullYear()+4}
        div
            div.info-row
                p.label Start Date:
                p #{startDate.getMonth() + 1}/#{startDate.getDate()}/#{startDate.getFullYear()}
            a(href="/")
                button(type="button") back